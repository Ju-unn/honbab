<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_200">

<!--    상단 헤더-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/bg_100"
        android:elevation="2dp">

<!--        뒤로가기 버튼-->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="←"
            android:textSize="18sp"
            android:textColor="@color/text_100"
            android:background="@drawable/button_round_background"
            android:layout_marginEnd="12dp"/>

<!--        제목-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="모임 생성"
            android:textColor="@color/primary_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="-0.05"
            android:layout_marginEnd="56dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/photo_upload_background"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📸"
                        android:textSize="48sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모임 대표 사진을 첨부하세요!"
                        android:textColor="@color/text_100"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맛있는 음식 사진이 더 많은 관심을 받아요"
                        android:textColor="@color/text_200"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_select_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="사진 선택"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary_background"
                        android:paddingHorizontal="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모임명"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                     android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_meeting_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="모임명을 입력하세요"
                    android:textColorHint="@color/text_200"
                    android:textColor="@color/text_100"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="16dp"
                    android:maxLength="30"
                    android:inputType="text"/>

            </LinearLayout>

<!--            모임 설명-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모임 설명"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_meeting_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="모임에 대해 간단히 소개해 주세요"
                    android:textColorHint="@color/text_200"
                    android:textColor="@color/text_100"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:gravity="center"
                    android:maxLength="200"
                    android:inputType="textMultiLine"/>

            </LinearLayout>

<!--            날짜 시간-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜/시간"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_meeting_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="날짜와 시간을 선택해주세요"
                    android:textColorHint="@color/text_200"
                    android:textColor="@color/text_100"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="16dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawablePadding="12dp"/>

            </LinearLayout>

<!--            모집 인원-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모집 인원"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_decrease_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/primary_100"
                        android:background="@drawable/count_button_background"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tv_participant_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2명"
                        android:textColor="@color/text_100"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_increase_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textColor="@color/primary_100"
                        android:background="@drawable/count_button_background"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="최소 2명 ~ 최대 20명"
                    android:textColor="@color/text_200"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 가게 찾기 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가게 찾기"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_store_search"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:hint="가게명 또는 주소 입력"
                        android:textColorHint="@color/text_200"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:background="@drawable/edittext_background"
                        android:paddingHorizontal="16dp"
                        android:layout_marginEnd="8dp"
                        android:inputType="text" />

                    <Button
                        android:id="@+id/btn_search_store"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="검색"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary_background"
                        android:minWidth="0dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 선택된 가게 정보 (검색 후 나타남) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/selected_store_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/bg_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선택된 가게"
                        android:textColor="@color/text_200"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_selected_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="돼지 먹고 싶은날"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가게 주소"
                        android:textColor="@color/text_200"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_selected_store_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신림동 108-00번지"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <!-- 하단 고정 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_100"
        android:padding="18dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btn_create_meeting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="모임 생성"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary_background"
            android:elevation="2dp"
            />

    </LinearLayout>

</LinearLayout>