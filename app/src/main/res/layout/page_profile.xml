<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_200">

<!--    프로필 헤더-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_header_background"
        android:padding="24dp"
        android:gravity="center">

<!--        프로필 이미지-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- 편집 버튼 -->
            <ImageView
                android:id="@+id/iv_profile_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/profile_avatar_background"
                android:elevation="4dp"
                android:src="@drawable/ic_notification" />

            <ImageButton
                android:id="@+id/btn_edit_profile_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_notification"
                android:background="@drawable/edit_button_background"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="5dp" />

        </FrameLayout>

<!--        닉네임-->
        <TextView
            android:id="@+id/tv_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고기 아저씨"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:letterSpacing="-0.02"/>

<!--        상태 메세지-->
        <TextView
            android:id="@+id/tv_profile_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛집 탐방과 혼밥을 좋아해요!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="18dp"
            android:alpha="0.9"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <!--        점수-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_stat_background"
                android:padding="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매너점수"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/tv_manner_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!--        참여 횟수-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_stat_background"
                android:padding="12dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여횟수"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:alpha="0.8"/>


                <TextView
                    android:id="@+id/tv_participation_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12회"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<!--    스크롤-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            활동 요약-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="2dp"
                            android:src="@drawable/ic_notification"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 달 활동 요약"
                            android:textColor="@color/text_100"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_monthly_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3회 모임 참여, 1회 모임 주최, 매너점수 4.8 유지 중!"
                        android:textColor="@color/text_100"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 메뉴 리스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bg_100"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="18dp"
                android:elevation="1dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:textColor="@color/text_200"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- 내 모임 관리 -->
                <LinearLayout
                    android:id="@+id/menu_my_meetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="내 모임 관리"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 알림 설정 -->
                <LinearLayout
                    android:id="@+id/menu_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔔"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="알림 설정"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 고객센터 -->
                <LinearLayout
                    android:id="@+id/menu_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎧"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="고객센터"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 설정 -->
                <LinearLayout
                    android:id="@+id/menu_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚙️"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="설정"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 프로필 수정 -->
                <LinearLayout
                    android:id="@+id/menu_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✏️"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="프로필 수정"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 계정 / 정보관리 -->
                <LinearLayout
                    android:id="@+id/menu_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✏️"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="계정 / 정보 관리"
                        android:textColor="@color/text_100"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textColor="@color/text_200"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 하단 여백 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>