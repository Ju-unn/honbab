<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    android:background="@color/bg_200">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/bg_100"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로가기 버튼 -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="←"
            android:textSize="18sp"
            android:textColor="@color/text_100"
            android:background="@drawable/button_round_background"
            android:layout_marginEnd="12dp" />

        <!-- 제목 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 주변 모임"
            android:textColor="@color/primary_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="-0.05"
            android:layout_marginEnd="56dp"/>


    </LinearLayout>

    <!-- 필터 버튼들 -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_100"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_filter_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="전체"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/category_button_active_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filter_1km"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1km 이내"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filter_popular"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="인기순"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filter_latest"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="최신순"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 지도 영역 네이버 API -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/filter_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 지도 플레이스홀더 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:alpha="0.7" />

        <!-- 지도 핀들 -->
        <!-- 핀  -->
        <FrameLayout
            android:id="@+id/pin_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="고기"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/map_pin_background"
                android:elevation="4dp" />

            <!-- 핀 배지 (참여자 수) -->
            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/pin_badge_background"
                android:layout_gravity="top|end"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="-6dp"
                android:elevation="5dp" />

        </FrameLayout>

        <!-- 핀 -->
        <FrameLayout
            android:id="@+id/pin_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="파스타"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/map_pin_inactive_background"
                android:elevation="4dp" />

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/pin_badge_background"
                android:layout_gravity="top|end"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="-6dp"
                android:elevation="5dp" />

        </FrameLayout>

        <!-- 핀  -->
        <FrameLayout
            android:id="@+id/pin_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="200dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <!-- 클러스터 효과 (뒷배경) -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/cluster_background"
                android:layout_gravity="center"
                android:alpha="0.3" />

            <!-- 클러스터 핀 -->
            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cluster_pin_background"
                android:layout_gravity="center"
                android:elevation="4dp" />

        </FrameLayout>

    </FrameLayout>

    <!-- 하단 모임 상세 BottomSheet (처음엔 숨김) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_detail_sheet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 상단 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="8dp">

                <!-- 드래그 핸들 -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/drag_handle_background"
                    android:layout_marginBottom="12dp" />

                <!-- 상단 바 (제목 + 닫기) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_sheet_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="내 주변 모임"
                        android:textColor="@color/text_100"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- 닫기 버튼 -->
                    <ImageView
                        android:id="@+id/btn_close_detail"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_close"
                        android:background="@drawable/button_round_background"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_100"
                android:layout_marginHorizontal="16dp" />

            <!-- 모임 리스트 (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_meetings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:clipToPadding="false"
                android:scrollbars="none" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>