<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_200">

<!--    상단 헤더-->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/bg_100"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

<!--        위치 버튼-->
        <Button
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="00동"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary_background"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            />

<!--        앱 타이틀-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="혼밥 모여"
            android:textColor="@color/primary_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.05"
            />

<!--        알림 종 모양-->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp">

<!--            종 모양-->
            <ImageButton
                android:id="@+id/btn_notification"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:textSize="18sp"
                android:background="@drawable/button_round_background"
                android:src="@drawable/ic_notification"
                android:elevation="1dp"/>

<!--            알림 배지-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/notification_badge_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

<!--    검색 바-->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_bar_background"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="8dp" />
        
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="어떤 음식을 드시고 싶나요?"
            android:textColorHint="@color/text_200"
            android:textSize="14sp"
            android:background="@android:color/transparent" />

    </LinearLayout>

<!--    카테고리 버튼-->
    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_category_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="전체"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/category_button_active_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_category_korean"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="한식"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_category_chinese"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="중식"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_category_japanese"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="일식"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_category_western"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="양식"
                android:textColor="@color/text_200"
                android:textSize="13sp"
                android:background="@drawable/category_button_background"
                android:paddingHorizontal="18dp" />
        </LinearLayout>
    </HorizontalScrollView>

<!--    배경-->
    <View
        android:id="@+id/white_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bg_100"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/category_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


<!--    모임 리스트 (리사이클뷰 공간)-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_meetings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="24dp"
        android:layout_marginTop="18dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/category_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

<!--    리스트 추가 버튼 (플로팅 버튼)-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/primary_100"
        android:tint="@color/white"
        app:fabSize="normal"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>